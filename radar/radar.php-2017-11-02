  }
  
//Functions to either disable (onmouseover) or enable (onmouseout) the map's dragging
//This allows us to use input text fiels & temporarily take over the mouse click from that
function controlEnter(e) {
    mymap.dragging.disable();
    //disableClickPropagation (e);
}
function controlLeave(e) {
    mymap.dragging.enable();
}  


var xmlhttp2 = new XMLHttpRequest();
xmlhttp2.onreadystatechange = function(){
  if(xmlhttp2.status==200 && xmlhttp2.readyState==4){  
     loadPlayerList();     
     };
}

function loadPlayerList () {
         document.getElementById("playerlist").innerHTML = "<pre> " + xmlhttp2.responseText + "</pre>";

}     
     

function readfile () { 
         if (urlParams['mission'] != null && urlParams['side'] != null && urlParams['pass'] == "mum") { //todo - read password from file passed from server
            xmlhttp.open("GET",urlParams['mission'].toUpperCase() + "_" + urlParams['side'].toUpperCase() + "_radar.txt",true);
            xmlhttp.send();
            xmlhttp2.open("GET",urlParams['mission'].toUpperCase() + "_" + urlParams['side'].toUpperCase() + "_players.txt",true);
            xmlhttp2.send();
         }
         
         
}


readfile();
setInterval(readfile, refreshinterval_ms);
